{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*"]
}
