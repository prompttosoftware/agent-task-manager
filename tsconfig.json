{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/data-source": [
        "data-source.ts"
      ]
    },
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ]
  },
  "files": [
    "src/services/issue.service.ts",
    "src/app.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
